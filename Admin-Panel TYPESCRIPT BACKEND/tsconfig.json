{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "types": ["node", "dotenv"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
